{
  "compilerOptions": {
    // "moduleResolution": "node16",
    "target": "esnext",
    "module": "node16",
    "lib": [
      "dom",
      "esnext"
    ],
    "jsx": "react-native",
    "jsxImportSource": "@emotion/react",
    "moduleResolution": "node16",
    "allowJs": true,
    "noEmit": true,
    "isolatedModules": true,
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "*": [
        "src/*"
      ]
    }
  },
  "include": [
    "./src",
    "App.tsx",
    "app.config.ts"
  ],
  "exclude": ["**/__mocks__/*", "**/__tests__/*"],
  "extends": "expo/tsconfig.base"
}

